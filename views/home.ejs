<link rel="stylesheet" href="/css/home.css" />

<div class="mb-5 p-5">
  <% for(let project of projects){%>
  <div class="card mb-2 w-50 m-auto home-container">
    <div class="card-header d-flex justify-content-between align-items-center">
      <strong>Name of the Project: </strong>
      <p class="project-name"><%=project.name %></p>
      <div>
        <a href="/project/delete/?id=<%=project.id%>" class="delete-link">
          <!-- <i class="fa-solid fa-trash fa-bounce" style="color: #1f5120;"></i> -->
          <i class="fa-solid fa-trash" style="color: #ee0c1b"></i>
        </a>
      </div>
    </div>
    <div class="card-body d-flex justify-content-between align-items-center">
      <div>
        <p class="card-title"><strong>Description: </strong> <%=project.description %></p>
        <p class="card-text"><strong>Author: </strong><%=project.author%></p>
      </div>
      <div class="open-project-btn">
        <a href="/projects/<%=project.id%>" class="btn btn-primary front">Open Project</a>
      </div>
    </div>
  </div>
  <%}%>
</div>
